<div class="singUp">
  <div class="loginHeader">
    <%= link_to new_user_session_path, class: 'backArrow' do %>
      <i class="icon-arrow-left"></i>
    <% end %>
    <h2>Login</h2>
    </div>
  <div class="forgotPassword">
    <h2>Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "email"%>
      </div>

      <div class="action">
        <%= f.submit "Send me the instructions" %>
      </div>
    <% end %>
  </div>
</div>